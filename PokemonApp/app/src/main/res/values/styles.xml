<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/text_icons</item>
    </style>

    <style name="EditTextTheme" parent="android:Widget.EditText">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="RadioButtonTHeme" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@color/colorPrimary</item>
    </style>

    <style name="Theme.CustomStatusBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
</resources>