<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_text_progress_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_small"
        android:textSize="@dimen/text_size_large"
        tools:text="Loading progress"/>

    <LinearLayout
        android:id="@+id/rl_progress_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_xxx_high"
        android:layout_marginLeft="@dimen/margin_xxx_high"
        android:layout_below="@id/tv_text_progress_view"
        android:orientation="vertical">

    </LinearLayout>

</RelativeLayout>