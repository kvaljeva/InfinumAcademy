<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_text_progress_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_small"
        android:textSize="@dimen/text_size_large"
        tools:text="Loading progress"/>

    <ProgressBar
        android:id="@+id/pb_progress_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/tv_text_progress_view"
        android:layout_alignLeft="@id/tv_text_progress_view"
        android:layout_alignEnd="@id/tv_text_progress_view"
        android:layout_alignRight="@id/tv_text_progress_view"
        android:layout_marginTop="@dimen/margin_xxx_high"
        android:indeterminate="true" />

</RelativeLayout>