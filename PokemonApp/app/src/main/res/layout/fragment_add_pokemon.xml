<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_icons">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/abl_header_add_pokemon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightBackground"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/ctl_header_add_pokemon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/colorPrimary">

            <ImageView
                android:id="@+id/iv_add_image"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/iv_image_container_height"
                android:layout_marginTop="@dimen/margin_25dp"
                android:src="@drawable/ic_person_details"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/iv_pokemon_empty_state"
                app:layout_collapseMode="parallax"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_add_pokemon"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ToolbarTheme"
                app:layout_collapseMode="pin"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/sv_body_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="?attr/actionBarSize"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/rl_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_pokemon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person"
                android:layout_marginTop="@dimen/iv_name_icon_margin_top"
                android:layout_marginStart="@dimen/margin_15dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:contentDescription="@string/iv_pokemon_name_icon"/>

            <EditText
                android:id="@+id/et_pokemon_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextTheme"
                android:hint="@string/et_pokemon_name"
                android:layout_marginTop="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:layout_alignLeft="@id/iv_pokemon_name"
                android:layout_alignStart="@id/iv_pokemon_name"
                android:layout_marginStart="@dimen/margin_40dp"
                android:layout_marginLeft="@dimen/margin_40dp"
                android:imeOptions="actionNext"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/et_pokemon_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_pokemon_name"
                android:theme="@style/EditTextTheme"
                android:hint="@string/et_pokemon_height"
                android:layout_alignStart="@id/et_pokemon_name"
                android:layout_alignLeft="@id/et_pokemon_name"
                android:layout_alignEnd="@id/et_pokemon_name"
                android:layout_alignRight="@id/et_pokemon_name"
                android:paddingTop="@dimen/padding_10dp"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"/>

            <EditText
                android:id="@+id/et_pokemon_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_pokemon_height"
                android:theme="@style/EditTextTheme"
                android:hint="@string/et_pokemon_weight"
                android:layout_alignStart="@id/et_pokemon_name"
                android:layout_alignLeft="@id/et_pokemon_name"
                android:layout_alignEnd="@id/et_pokemon_name"
                android:layout_alignRight="@id/et_pokemon_name"
                android:paddingTop="@dimen/padding_10dp"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"/>

            <EditText
                android:id="@+id/et_pokemon_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_pokemon_weight"
                android:theme="@style/EditTextTheme"
                android:hint="@string/et_pokemon_type"
                android:layout_alignStart="@id/et_pokemon_name"
                android:layout_alignLeft="@id/et_pokemon_name"
                android:layout_alignEnd="@id/et_pokemon_name"
                android:layout_alignRight="@id/et_pokemon_name"
                android:paddingTop="@dimen/padding_10dp"
                android:imeOptions="actionNext"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/et_pokemon_abilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_pokemon_category"
                android:theme="@style/EditTextTheme"
                android:hint="@string/et_pokemon_moves"
                android:layout_alignStart="@id/et_pokemon_name"
                android:layout_alignLeft="@id/et_pokemon_name"
                android:layout_alignEnd="@id/et_pokemon_name"
                android:layout_alignRight="@id/et_pokemon_name"
                android:paddingTop="@dimen/padding_10dp"
                android:imeOptions="actionNext"
                android:singleLine="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_description"
                android:layout_marginTop="@dimen/margin_15dp"
                android:layout_below="@id/et_pokemon_abilities"
                android:layout_alignStart="@id/iv_pokemon_name"
                android:layout_alignLeft="@id/iv_pokemon_name"
                android:contentDescription="@string/iv_pokemon_description_icon"/>

            <EditText
                android:id="@+id/et_pokemon_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextTheme"
                android:layout_below="@id/et_pokemon_abilities"
                android:layout_alignStart="@id/et_pokemon_name"
                android:layout_alignLeft="@id/et_pokemon_name"
                android:layout_alignEnd="@id/et_pokemon_name"
                android:layout_alignRight="@id/et_pokemon_name"
                android:hint="@string/et_pokemon_desc_hint"
                android:paddingTop="@dimen/padding_10dp"
                android:imeOptions="actionDone"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/tv_gender_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_pokemon_desc"
                android:layout_alignStart="@id/et_pokemon_name"
                android:layout_alignLeft="@id/et_pokemon_name"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/tv_gender_add_pokemon"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/rg_gender_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_gender_desc"
                android:layout_toEndOf="@id/tv_gender_desc"
                android:layout_below="@id/et_pokemon_desc"
                android:layout_margin="@dimen/margin_10dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_male_text"
                    android:textColor="@color/secondaryText"
                    app:buttonTint="@color/colorPrimary"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:layout_marginEnd="@dimen/margin_20dp"/>

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_female_text"
                    android:textColor="@color/secondaryText"
                    app:buttonTint="@color/colorPrimary"/>
            </RadioGroup>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        app:layout_anchor="@id/sv_body_container"
        app:layout_anchorGravity="bottom">

        <Button
            android:id="@+id/btn_save_pokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/btn_save_pokemon"
            android:textColor="@color/text_icons"/>
    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_add_pokemon"
        app:layout_anchor="@id/abl_header_add_pokemon"
        app:layout_anchorGravity="bottom|right|end"
        app:backgroundTint="@color/colorPrimary"/>
</android.support.design.widget.CoordinatorLayout>