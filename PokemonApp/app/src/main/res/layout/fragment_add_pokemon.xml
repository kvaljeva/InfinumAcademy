<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_add_pokemon_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/abl_header_add_pokemon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightBackground"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/ctl_header_add_pokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/colorPrimary">

            <ImageView
                android:id="@+id/iv_add_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/iv_image_container_height"
                android:layout_marginTop="@dimen/margin_xxx_high"
                android:src="@drawable/ic_person_details"
                android:layout_gravity="center_horizontal"
                android:scaleType="center"
                android:contentDescription="@string/iv_pokemon_empty_state"
                app:layout_collapseMode="parallax"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_add_pokemon"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ToolbarTheme"
                app:layout_collapseMode="pin"/>

            <LinearLayout
                android:id="@+id/ll_photo_options_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:animateLayoutChanges="true"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_take_photo"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    style="@style/TransparentButton"
                    android:visibility="gone"
                    android:text="@string/take_a_photo"
                    android:layout_marginBottom="@dimen/margin_small"/>

                <Button
                    android:id="@+id/btn_choose_photo"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    style="@style/TransparentButton"
                    android:visibility="gone"
                    android:text="@string/choose_photo"/>
            </LinearLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/sv_body_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/rl_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_pokemon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person"
                android:layout_marginTop="@dimen/iv_name_icon_margin_top"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginLeft="@dimen/margin_medium"
                android:contentDescription="@string/iv_pokemon_name_icon"/>

            <EditText
                android:id="@+id/et_pokemon_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/et_pokemon_name"
                android:paddingTop="@dimen/padding_xxx_high"
                android:layout_marginRight="@dimen/margin_high"
                android:layout_marginEnd="@dimen/margin_high"
                android:layout_alignLeft="@id/iv_pokemon_name"
                android:layout_alignStart="@id/iv_pokemon_name"
                android:layout_marginStart="@dimen/margin_xxx_high"
                android:layout_marginLeft="@dimen/margin_xxx_high"
                android:imeOptions="actionNext"
                android:singleLine="true"
                style="@style/EditTextTheme"/>

            <EditText
                android:id="@+id/et_pokemon_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_pokemon_name"
                android:hint="@string/et_pokemon_height"
                android:layout_alignStart="@id/et_pokemon_name"
                android:layout_alignLeft="@id/et_pokemon_name"
                android:layout_alignEnd="@id/et_pokemon_name"
                android:layout_alignRight="@id/et_pokemon_name"
                android:paddingTop="@dimen/padding_high"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                style="@style/EditTextTheme"/>

            <EditText
                android:id="@+id/et_pokemon_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_pokemon_height"
                android:hint="@string/et_pokemon_weight"
                android:layout_alignStart="@id/et_pokemon_name"
                android:layout_alignLeft="@id/et_pokemon_name"
                android:layout_alignEnd="@id/et_pokemon_name"
                android:layout_alignRight="@id/et_pokemon_name"
                android:paddingTop="@dimen/padding_high"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                style="@style/EditTextTheme"/>

            <LinearLayout
                android:id="@+id/ll_types_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_pokemon_weight"
                android:layout_alignStart="@id/et_pokemon_name"
                android:layout_alignLeft="@id/et_pokemon_name"
                android:layout_marginLeft="@dimen/margin_x_small"
                android:layout_marginStart="@dimen/margin_x_small"
                android:layout_marginTop="@dimen/margin_x_small"
                android:layout_alignEnd="@id/et_pokemon_name"
                android:layout_alignRight="@id/et_pokemon_name"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_pokemon_types"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/et_pokemon_type"
                    android:textSize="@dimen/text_size_normal"/>

                <TextView
                    android:id="@+id/tv_types_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_x_small"
                    android:background="?android:selectableItemBackground"
                    android:textSize="@dimen/text_size_small"
                    android:text="@string/not_assigned"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_moves_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_types_container"
                android:layout_alignStart="@id/et_pokemon_name"
                android:layout_alignLeft="@id/et_pokemon_name"
                android:layout_marginLeft="@dimen/margin_x_small"
                android:layout_marginStart="@dimen/margin_x_small"
                android:layout_alignEnd="@id/et_pokemon_name"
                android:layout_alignRight="@id/et_pokemon_name"
                android:paddingTop="@dimen/padding_high"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_pokemon_moves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/et_pokemon_moves"
                    android:textSize="@dimen/text_size_normal"/>

                <TextView
                    android:id="@+id/tv_moves_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_x_small"
                    android:background="?android:selectableItemBackground"
                    android:textSize="@dimen/text_size_small"
                    android:text="@string/not_assigned"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_gender_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_moves_container"
                android:layout_alignStart="@id/et_pokemon_name"
                android:layout_alignLeft="@id/et_pokemon_name"
                android:layout_marginTop="@dimen/padding_high"
                android:layout_marginLeft="@dimen/margin_x_small"
                android:layout_marginStart="@dimen/margin_x_small"
                android:text="@string/tv_gender_add_pokemon"
                android:textSize="@dimen/text_size_normal" />

            <RadioGroup
                android:id="@+id/rg_gender_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_gender_desc"
                android:layout_toEndOf="@id/tv_gender_desc"
                android:layout_below="@id/ll_moves_container"
                android:layout_margin="@dimen/margin_small"
                android:paddingTop="@dimen/padding_x_small"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_male_text"
                    android:textColor="@color/black"
                    android:checked="true"
                    app:buttonTint="@color/colorPrimary"
                    android:layout_marginRight="@dimen/margin_high"
                    android:layout_marginEnd="@dimen/margin_high"/>

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_female_text"
                    android:textColor="@color/black"
                    app:buttonTint="@color/colorPrimary"/>
            </RadioGroup>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_description"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_below="@id/rg_gender_selection"
                android:layout_alignStart="@id/iv_pokemon_name"
                android:layout_alignLeft="@id/iv_pokemon_name"
                android:contentDescription="@string/iv_pokemon_description_icon"/>

            <EditText
                android:id="@+id/et_pokemon_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rg_gender_selection"
                android:layout_alignLeft="@id/et_pokemon_name"
                android:layout_alignStart="@id/et_pokemon_name"
                android:layout_alignEnd="@id/et_pokemon_name"
                android:layout_alignRight="@id/et_pokemon_name"
                android:hint="@string/et_pokemon_desc_hint"
                android:paddingTop="@dimen/padding_small"
                android:imeOptions="actionDone"
                android:singleLine="true"
                style="@style/EditTextTheme"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/et_pokemon_desc"
                android:gravity="center_horizontal|bottom"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_save_pokemon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="@string/btn_save_pokemon"
                    style="@style/FlatButtonColoredTheme"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="@dimen/margin_medium"
        android:src="@drawable/ic_add_pokemon"
        app:layout_anchor="@id/abl_header_add_pokemon"
        app:layout_anchorGravity="bottom|right|end"
        app:backgroundTint="@color/colorPrimary"/>

    <valjevac.kresimir.homework3.custom.ProgressView
        android:id="@+id/pv_add_pokemon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/white"
        tools:visibility="gone"
        app:text="@string/saving_pokemon"
        app:progressBarType="horizontal"/>
</android.support.design.widget.CoordinatorLayout>