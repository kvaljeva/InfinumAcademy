<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/abl_header_pokemon_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/ctl_header_pokemon_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:background="@drawable/header_gradient_selector"
            app:contentScrim="@color/colorPrimary">

            <ImageView
                android:id="@+id/iv_pokemon_image"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/iv_image_container_height"
                android:src="@drawable/ic_person_details"
                android:layout_marginTop="@dimen/margin_high"
                android:contentDescription="@string/iv_pokemon_details_image"
                android:layout_gravity="center_horizontal"
                android:scaleType="center"
                app:layout_collapseMode="parallax"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_pokemon_details"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ToolbarTheme"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="pin"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/sv_details_body_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="45dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/rl_details_body_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true">

            <RelativeLayout
                android:id="@+id/rl_name_and_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium">

                <TextView
                    android:id="@+id/tv_details_pokemon_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/DetailsMainHeading"
                    tools:text="Name"/>

                <TextView
                    android:id="@+id/tv_details_pokemon_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_details_pokemon_name"
                    style="@style/DetailsMainDescriptionText"
                    tools:text="Description"/>

                <View
                    android:id="@+id/view_vertical_line"
                    android:layout_width="@dimen/details_vertical_line_width"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:background="@color/detailsHeadingColor"
                    android:layout_alignBottom="@id/tv_details_pokemon_desc"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_general_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/rl_name_and_desc"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_x_high"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_pokemon_height"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/DetailsSectionTitle"
                    android:text="@string/et_pokemon_height"/>

                <TextView
                    android:id="@+id/tv_pokemon_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/DetailsSectionTitle"
                    android:text="@string/et_pokemon_weight"/>

                <TextView
                    android:id="@+id/tv_pokemon_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/DetailsSectionTitle"
                    android:text="@string/tv_gender_heading"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_general_info_values"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_below="@id/ll_general_info"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_pokemon_height_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/DetailsSectionDescription"
                    tools:text="Value"/>

                <TextView
                    android:id="@+id/tv_pokemon_weight_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/DetailsSectionDescription"
                    tools:text="Value"/>

                <TextView
                    android:id="@+id/tv_pokemon_gender_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/DetailsSectionDescription"
                    tools:text="Value"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_general_info_lower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_below="@id/ll_general_info_values"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_pokemon_abilities"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/DetailsSectionTitle"
                    android:text="@string/et_pokemon_type"/>

                <TextView
                    android:id="@+id/tv_pokemon_gender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/DetailsSectionTitle"
                    android:text="@string/tv_moves_heading"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_general_info_values_lower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_below="@id/ll_general_info_lower"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_pokemon_type_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/DetailsSectionDescription"
                    tools:text="Value"/>

                <TextView
                    android:id="@+id/tv_pokemon_moves_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/DetailsSectionDescription"
                    tools:text="Value"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_like_dislike_container"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_general_info_values_lower"
                android:layout_marginTop="@dimen/margin_xx_high">

                <ImageButton
                    android:id="@+id/btn_like"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_like_off"
                    android:contentDescription="@string/like_pokemon_icon"
                    android:layout_marginLeft="@dimen/margin_xxx_high"
                    android:layout_marginStart="@dimen/margin_xxx_high"
                    android:background="@color/white"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/btn_dislike"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_dislike_off"
                    android:contentDescription="@string/dislike_pokemon_icon"
                    android:layout_marginRight="@dimen/margin_xxx_high"
                    android:layout_marginEnd="@dimen/margin_xxx_high"
                    android:background="@color/white"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_like_dislike_container_labels"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_like_dislike_container"
                android:layout_marginLeft="@dimen/margin_xxx_high"
                android:layout_marginRight="@dimen/margin_xxx_high"
                android:layout_marginTop="@dimen/margin_x_small">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/like_pokemon"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/dislike_pokemon"
                    android:layout_weight="1"
                    android:gravity="center"/>
            </LinearLayout>

            <valjevac.kresimir.pokemonApp.custom.ProgressView
                android:id="@+id/pv_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_like_dislike_container_labels"
                android:layout_marginTop="@dimen/margin_medium"
                android:paddingTop="@dimen/padding_x_small"
                app:text="Loading comments"
                app:progressBarType="spinner"
                app:progressTextSize="15"
                app:progressBarHeight="95"
                app:progressBarWidth="95"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/ll_comments_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_high"
                android:layout_below="@id/ll_like_dislike_container_labels"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_comments_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/comments_label"
                    style="@style/DetailsCommentsHeading"/>

                <include
                    android:id="@+id/first_comment_container"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_small"
                    layout="@layout/list_item_comment" />

                <include
                    android:id="@+id/second_comment_container"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_small"
                    layout="@layout/list_item_comment"/>

                <Button
                    android:id="@+id/btn_show_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_show_all_comments"
                    android:visibility="gone"
                    style="@style/FlatButtonColoredTheme"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ll_comment_input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end|bottom"
        android:background="@color/white">

        <EditText
            android:id="@+id/et_comment_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/enter_comment_hint"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            style="@style/EditTextTheme"
            android:layout_weight="1"/>
        
        <ImageButton
            android:id="@+id/btn_create_comment"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin_medium"
            android:contentDescription="@string/btn_create_comment_desc"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>