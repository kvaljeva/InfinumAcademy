<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="valjevac.kresimir.homework3">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.PokemonListActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:parentActivityName=".activities.PokemonListActivity"
            android:name=".activities.AddPokemonActivity"
            android:label="Add new Pokemon">
        </activity>
        <activity
            android:parentActivityName=".activities.PokemonListActivity"
            android:name=".activities.PokemonDetailsActivity"
            android:label="Details">
        </activity>
    </application>

</manifest>