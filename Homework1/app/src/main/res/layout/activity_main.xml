<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.infinum.homework1.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_count"
        android:layout_centerInParent="true"
        android:textSize="@dimen/tv_text_size"
        android:gravity="center"
        />

    <Button
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:text="@string/btnCount"
        android:id="@+id/btn_count"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/rl_margin"
        android:layout_marginTop="@dimen/rl_margin"
        android:background="@drawable/ripple"
        android:textColor="@color/white"
        />

    <Button
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:text="@string/btnReset"
        android:id="@+id/btn_reset"
        android:layout_alignBottom="@+id/btn_count"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/rl_margin"
        android:background="@drawable/ripple"
        android:textColor="@color/white"
        />
</RelativeLayout>
